{
  "name": "api",
  "version": "1.0.0",
  "description": "Backend API",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:producer": "node dist/kafka-producer-service.js",
    "start:demo": "node dist/demo-server.js",
    "dev": "nodemon src/index.ts",
    "dev:producer": "nodemon src/kafka-producer-service.ts",
    "dev:demo": "nodemon src/demo-server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:producer\"",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["api", "backend", "nodejs", "typescript"],
  "author": "Shany",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "mongoose": "^8.0.3",
    "kafkajs": "^2.2.4",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
